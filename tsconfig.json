{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2017"
    ],
    "types": ["reflect-metadata", "node"],
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "outDir": "build/",
    "baseUrl": "./src"
  },
  "filesGlob": [
    "**/*.ts",
    "!node_modules/**/*"
  ],
  "exclude": [
    "node_modules",
    "server/**",
    "build/**",
    "**/*.json",
    "migrations/**",
    "shellwork.ts"
  ]
}
